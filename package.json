    "build:mdx": "content-collections build",
    "bundle-analyzer": "cross-env ANALYZE=true bun run build",
    "clean": "rm -rf .next .content-collections .vercel",
    "check:knip": "bun with-env knip",
    "check:spelling": "cspell -c .cspell.json --no-progress --no-summary --no-must-find-files --unique",
    "start": "next start",
    "db:check": "bun with-env drizzle-kit check",
    "db:generate": "bun with-env drizzle-kit generate",
    "db:migrate": "bun with-env drizzle-kit migrate",
    "db:push": "bun with-env drizzle-kit push",
    "db:seed": "bun with-env tsx ./src/db/seed.ts",
    "db:studio": "bun with-env drizzle-kit studio",
    "with-env": "dotenv -e .env.local -- bun",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --max-warnings 0 --fix",
    "type-check": "tsc --noEmit",
    "prepare": "simple-git-hooks",
    "deps:up": "taze",
    "plop": "cross-env NODE_OPTIONS='--import tsx' plop --plopfile=plop.config.ts"
  },
